                    <Grid>
                        <Path StrokeJoin="Round"
                              StrokeLineCap="Round"
                              Data="M0 0h24v24H0z" />
                        <Path Stroke="White"
                              StrokeJoin="Round"
                              StrokeLineCap="Round"
                              Data="M12 5v14M5 12h14" />
                    </Grid>
                </Viewbox>
            </DataTemplate>

            <DataTemplate x:Key="MaximizeIcon">
